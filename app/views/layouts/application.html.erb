<!DOCTYPE html>
<html>
<head>
  <title>Hangout</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.20&signed_in=true&libraries=geometry"></script>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<% if logged_in? %>
<%= link_to "usersIndex", users_path() %>
<%= link_to "User Show Page", user_path(session[:user_id])%>
<%= link_to "Sign Out", logout_path, method: :delete %>
<% end  %>
  <div class="main container">
    <% flash.each do |key, value| %>
      <% if key == "notice" %>
        <%= content_tag :div, value, class: "text-center alert alert-warning" %>
      <% elsif key == "alert" %>
        <%= content_tag :div, value, class: "text-center alert alert-danger" %>
      <% else %>
        <%= content_tag :div, value, class: "text-center alert alert-success" %>
      <% end %>
    <% end %>
    <%= yield %>

  </div>

</body>
</html>
